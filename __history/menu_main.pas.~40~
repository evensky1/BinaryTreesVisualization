unit menu_main;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, System.Actions, Vcl.ActnList,
  Vcl.StdCtrls, Vcl.Imaging.pngimage, Vcl.ExtCtrls;

type
  Tmain_menu = class(TForm)
    ActionList1: TActionList;
    btnOpen: TButton;
    btnDir: TButton;
    btnHelp: TButton;
    btnExit: TButton;
    actOpenBinary: TAction;
    actExit: TAction;
    procedure actOpenBinaryExecute(Sender: TObject);
    procedure btnDirClick(Sender: TObject);
    procedure actExitExecute(Sender: TObject);
    procedure FormCreate(Sender: TObject);

  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  main_menu: Tmain_menu;

implementation

{$R *.dfm}
uses
  binary_main;

procedure Tmain_menu.actExitExecute(Sender: TObject);
var
ensurance: integer;
begin
 ensurance := messagedlg('¬ы уверены, что хотите выйти? ', mtConfirmation, mbYesNo, 0);
 if ensurance = 6 then
 main_menu.close;
end;
//отмену действи€ можно сделать через массив удалЄнных элементов и проверку
//есть ли в дереве элемент
//если нет - значит последним было удаление, соответственно надо добавить
//если есть - значит было добавление, значит нужно удалить
procedure Tmain_menu.actOpenBinaryExecute(Sender: TObject);
begin
 Application.CreateForm(Tbinary_form, binary_form);
 binary_form.show;
 main_menu.enabled := FALSE;
 main_menu.Visible := FALSE;//а может вместо поставить main_menu.enable;
end;

procedure Tmain_menu.btnDirClick(Sender: TObject);
begin
 Application.CreateForm(Tbinary_form, binary_form);
 btnDir.Action.Execute;
 main_menu.enabled := FALSE;
 main_menu.Visible := FALSE;
 binary_form.show;
end;

procedure Tmain_menu.FormCreate(Sender: TObject);
begin
  main_menu.Color := $cfd9ce;
end;

end.
